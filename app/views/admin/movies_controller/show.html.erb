<div class="container">
	<div class="col-md-8 col-md-offset-2">
		<h1 class="text-center title">Select which Movie you want to update</h1>
		<% @movies.each do |movie| %>
			<div class="col-md-4">	
				<div class="movies">	
					<div class="col-md-8">	
						<h2 class="movies-title"><%= movie.title %></h2>
					</div>
					<div class="col-md-4">	
						<%= link_to "Edit", edit_admin_movies_controller_path(movie), class: "btn btn-custom1" %>
					</div>	
				</div>
			</div>		
		<%end%>
	</div>
</div>		